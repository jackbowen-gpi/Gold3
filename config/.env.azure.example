# Azure Development Environment Configuration
# Copy this file to .env.azure and update with your actual values

# Django Configuration
DEBUG=False
DJANGO_SETTINGS_MODULE=gchub_db.settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALLOWED_HOSTS=gold3-web.containerapp.azure.com,gold3-wiki.containerapp.azure.com

# Database Configuration (Azure PostgreSQL)
DEV_DB_HOST=gold3-dev-db.postgres.database.azure.com
DEV_DB_PORT=5432
DEV_DB_NAME=postgres
DEV_DB_USER=gold3admin
DEV_DB_PASSWORD=YourSecurePassword123!

# Redis Configuration (Azure Cache for Redis)
REDIS_URL=gold3-dev-redis.redis.cache.windows.net:6380,password=your-redis-key-here,ssl=True
CELERY_BROKER_URL=gold3-dev-redis.redis.cache.windows.net:6380,password=your-redis-key-here,ssl=True
CELERY_RESULT_BACKEND=gold3-dev-redis.redis.cache.windows.net:6380,password=your-redis-key-here,ssl=True

# Azure Configuration
AZURE_CONTAINER_REGISTRY=gold3devacr.azurecr.io
AZURE_RESOURCE_GROUP=gold3-dev-rg
AZURE_LOCATION=eastus
AZURE_SUBSCRIPTION_ID=your-subscription-id-here

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# External Database Configuration (Optional)
ETOOLS_DSN=DRIVER={ODBC Driver 17 for SQL Server};SERVER=your-external-sql-server;DATABASE=your-database;UID=your-username;PWD=your-password

# Notification Daemon (Optional)
NOTIFICATION_DAEMON_URL=http://notification-daemon:5341/notify
